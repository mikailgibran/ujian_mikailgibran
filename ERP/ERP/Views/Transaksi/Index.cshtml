@{
    ViewBag.Title = "SETIA MULIA";
    ViewBag.dashboard = "Transaksi";
    ViewBag.dashboardSmall = "Transaksi Barang";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    ViewBag.pathParent = Url.Content("~").Substring(0, Url.Content("~").Length - 1);
}

<input type="hidden" id="urlPath" name="urlPath" value="@ViewBag.pathParent" />

<style>
        .modal-content {
        /* position: relative; */
        width: 500px;
        height: 600px;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-direction: column;
        flex-direction: column;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid rgba(0,0,0,.2);
        border-radius: .3rem;
        outline: 0;
        overflow-y: auto;
    }

</style>

<<div class="row form-horizontal" id="tab_grid">
    <div id="Tabs" class="form-horizontal">
        <ul>
            <li class="k-state-active"><b>Pembelian</b></li>
            <li><b>Penjualan</b></li>
        </ul>

        <div id="tab1">
            <div class="form-horizontal">
                <div id="grid_pembelian"></div>
            </div>
        </div>
        <div id="tab2">
            <div class="form-horizontal">
                <div id="grid_penjualan"></div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModalPembelian" role="dialog">
    <div class="modal-dialog" style="width:600px;font-size:14px">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><label id="title_trans_pembelian" style="font-size:14px"></label></h4>
            </div>
            <div id="regis_modal" class="modal-body">
                <form id="form_regis" class="form-horizontal">
                    <input type="hidden" class="form-control" id="txt_pid">

                    <div class="row">
                        <label class="control-label col-sm-3" style="text-align:left">Tanggal Transaksi:</label>
                        <div class="col-sm-8">
                            <input type="text" style="width:100%" id="txt_tanggal_transaksi">
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <label class="control-label col-sm-3" style="text-align:left">Kode Barang:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" style="width:95%" id="txt_kode_barang">
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <label class="control-label col-sm-3" style="text-align:left">Nama Barang:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" style="width:95%" id="txt_nama_barang">
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <label class="control-label col-sm-3" style="text-align:left">Pengukuran:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" style="width:95%" id="txt_pengukuran">
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <label class="control-label col-sm-3" style="text-align:left">Jumlah Pembelian:</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" style="width:95%" id="txt_jumlah_pembelian">
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <label class="control-label col-sm-3" style="text-align:left">Harga:</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" style="width:95%" id="txt_harga">
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <label class="control-label col-sm-3" style="text-align:left">Total:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" style="width:95%" id="txt_total" disabled>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                        <button type="button" id="btn_SimpanPembelian" style="width:100%" class="btn btn-primary">SIMPAN</button>
                        <button type="button" id="btn_BatalPembelian" style="width:100%" class="btn" data-dismiss="modal">BATAL</button>
                </div>
            </div>

        </div>

    </div>

<div id="window_penjualan">
    <form id="form_regis" class="form-horizontal">

        <div class="row">
            <label class="control-label col-sm-3" style="text-align:left">No. Transaksi:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" style="width:95%" id="txt_no_trans_jual" disabled>
            </div>
        </div>
        <br />
        <div class="row">
            <label class="control-label col-sm-3" style="text-align:left">Tanggal Transaksi:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" style="width:95%" id="txt_tanggal_trans_jual">
            </div>
        </div>
        <br />

        @*<div class="row">
            <label class="control-label col-sm-3" style="text-align:left">Total:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" style="width:95%" id="txt_total_jual" disabled>
            </div>
        </div>*@

        <br />
        <div id="grid_itempenjualan"></div>

        <br/>

        <div class="row form-group">
            <div class="col-md-2"></div>
            <div class="col-md-1">
                <button type="button" id="btn_SimpanPenjualan" style="width:100%" class="btn btn-primary">SIMPAN</button>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-1">
                <button type="button" id="btn_BatalPenjualan" style="width:100%" class="btn">BATAL</button>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-1">
            </div>
        </div>

</form>
</div>

            <script type="text/javascript" src="@ViewBag.pathParent/Js/Transaksi.js"></script>
